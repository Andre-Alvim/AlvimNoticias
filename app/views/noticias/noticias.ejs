<!DOCTYPE html>
	<html lang="pt-br">
		<head>
			<meta charset="utf-8"/>
			<title>Noticias</title>
		</head>
		<style>
			td{
				border: 2px solid #000;
				padding: 4px;
			}
		</style>
	<body>

		<h1>Noticias</h1>

		<table>
			<tr>
				<td>ID</td>
				<td>Titulo</td>
			</tr>

			<% for(var i=0; i < noticias.length; i++) { %>
			<tr>
				<td><%= noticias[i].id_noticia %></td>
				<td><%= noticias[i].titulo %></td>
			</tr>
			<% } %>
		</table>

	</body>
</html>